#!/bin/sh
	# Display the action selector
	# Replace zenity | yad for which ever you use
	RET=`zenity --list --title "BunsenLabs Conky" --checklist --width=280 --height=365 \
		--column "Select" --column "Conkys to Edit" \
		FALSE	"BL Top 1 Line" \
		FALSE	"BL TR Lua" \
		FALSE	"BL TopRight" \
		FALSE	"BL TopLeft" \
		FALSE	"CB TopRight" \
		FALSE	"CB TopLeft" \
		FALSE	"BL TR S11" \
		FALSE	"CB Classic"`

	if echo "$RET" | grep "BL Top 1 Line"; then
		exec geany $HOME/.config/conky/bl-top.conkyrc &
	fi
	if echo "$RET" | grep "BL TR Lua"; then
		exec geany $HOME/.config/conky/bl-right-lua.conkyrc &
	fi
	if echo "$RET" | grep "BL TopRight"; then
		exec geany $HOME/.config/conky/bl-right.conkyrc &
	fi
	if echo "$RET" | grep "BL TopLeft"; then
		exec geany $HOME/.config/conky/bl-left.conkyrc &
	fi
	if echo "$RET" | grep "CB TopRight"; then
		exec geany $HOME/.config/conky/CB-TR.conkyrc &
	fi
	if echo "$RET" | grep "CB TopLeft"; then
		exec geany $HOME/.config/conky/CB-TL.conkyrc &
	fi
	if echo "$RET" | grep "BL TR S11"; then
		exec geany $HOME/.config/conky/bl-right-S11.conkyrc &
	fi
	if echo "$RET" | grep "CB Classic"; then
		exec geany $HOME/.config/conky/classic.conkyrc &
	fi; fi