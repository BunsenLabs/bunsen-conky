# Modified for BunsenLab Conky
## click to start, click to stop
## Original pkill line by: GrouchyGaijin
##    to start stop a specific conky
## This idea by: Stinkeye - Jan 2013
## With another tweak by: arclance
## Final tweak by: Sector11 - added wmctrl

#if pgrep -f "conky -c /media/5/Conky/S11_all-text.conky"
#then
#	pkill -xf "conky -c /media/5/Conky/S11_all-text.conky"
#else
#	wmctrl -s 5 && conky -c "/media/5/Conky/S11_all-text.conky"
#fi
#

	# Display the action selector
	# Replace yad | zenity for which ever you use
	RET=`zenity --list --title "Bunsen Labs Conky" --checklist --width=280 --height=325 \
		--column "Select" --column "Conky to Start | Stop" \
		FALSE	"BL One Liner" \
		FALSE	"BL Right" \
		FALSE	"BL Left" \
		FALSE	"CB Right" \
		FALSE	"CB Left" \
		FALSE	"= = = =" \
		FALSE	"Kill-All"`

	if echo "$RET" | grep "BL One Liner"; then
		exec $HOME/conky-BL/scripts/ssc-bl-Top &
	fi
	if echo "$RET" | grep "BL Right"; then
		exec $HOME/conky-BL/scripts/ssc-bl-Rgt &
	fi
	if echo "$RET" | grep "BL Left"; then
		exec $HOME/conky-BL/scripts/ssc-bl-Lft &
	fi
	if echo "$RET" | grep "CB Right"; then
		exec $HOME/conky-BL/scripts/ssc-CB-Rgt &
	fi
	if echo "$RET" | grep "CB Left"; then
		exec $HOME/conky-BL/scripts/ssc-CB-Lft &
	fi
	echo "$RET" | grep "= = = ="; then
	if echo "$RET" | grep "Kill-All"; then
		exec killall conky &
	if [ $? -eq 1 ];then exit; fi; fi
